# Shai-Hulud攻撃対策 - 推奨pnpm設定
# このファイルをプロジェクトのルートディレクトリに配置してください

# 新規公開から21日間（30240分）待機
minimum-release-age=30240

# ライフサイクルスクリプト（postinstall, preinstall等）を無効化
ignore-scripts=true

# peer dependenciesを自動インストール
auto-install-peers=true

# peer dependenciesの厳密チェックを無効化（互換性のため）
strict-peer-dependencies=false

# node_modulesの巻き上げを無効化（セキュリティ向上）
shamefully-hoist=false